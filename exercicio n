#include<stdio.h>
void main ()
{
    int n=0, sm=0,i=0, med;
    while (n>=0)
    {
        printf("Digite um numero: ");
        scanf("%d",&n);
        if(n>=0)
        {
            sm+=n;
            i++;
        }
    }
    med=sm/i;
    printf("A somatoria desses %d numeros eh: %d\n", i,sm);
    printf("A media desses %d numeros eh: %d\n", i, med);
    printf("Foram repetidas %d vezes.", i);
}
